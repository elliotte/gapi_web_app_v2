<div class="modal-dialog modal-small-width">
  <div class="modal-content">
    <div id="js-update-task-modal-body" class="modal-body">
      <h3 class="pink-header">Are you sure?</h3>
      <%= form_tag(complete_task_task_list_task_path(task_list_id, task.id), :id => "complete_task", :method => "put", remote: true) do %>
        <%= submit_tag "Complete", class: "btn" %>
      <% end %>
    </div>
    <div class="modal-footer">
      <p>Press ESC to exit</p>
    </div>
  </div>
</div>
