
var html_id = '#' + '<%= @task.id %>'

$(html_id).hide();

task = {
	id: '<%= @task.id %>',
	title: '<%= @task.title %>',
	due: '<%= @task.due %>',
	completed: '<%= @task.completed %>',
	notes: '<%= @task.notes %>',
	status: '<%= @task.status %>'
}

var taskListId = '<%= @task_list_id %>'

$('#tasks-complete-container').prepend(
		uiHelper.tasksHtml(task, taskListId)
);

$("#js-update-task-modal-body").html("<%= escape_javascript(render partial: 'task_complete', locals: { task: @task }) %>");

Webflow.require("slider").redraw();
