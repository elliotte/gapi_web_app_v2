
var div_id = '#'+'<%= @div_id %>'

$(div_id).hide();

task = {
	id: '<%= @task.id %>',
	title: '<%= @task.title %>',
	due: '<%= @task.due %>',
	completed: '<%= @task.completed %>',
	notes: '<%= @task.notes %>',
	status: '<%= @task.status %>'
}

var taskListId = '<%= @task_list_id %>'

$("#js-update-task-modal-body").html("<%= escape_javascript(render partial: 'task_updated', locals: { task: @task }) %>");

if ( task.status == "completed" ) {
	console.log('completed')
	$('#tasks-complete-container').append(
		uiHelper.tasksHtml(task, taskListId)
	);

} else {
	console.log('NOT completed')
	$('#tasks-pending-container').append(
         uiHelper.tasksHtml(task, taskListId)
    );

};

Webflow.require("slider").redraw();