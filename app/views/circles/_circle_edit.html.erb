<div class="modal-dialog modal-medium-width">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Circle Details</h3>
    </div>
    <div class="modal-body">
      <%= form_tag(circle_path(circle.id), :id => "update_circle", class: "contactForm", :method => "put") do %>
        <div class="form-group">
          <label for="name">Name:</label>
          <div class="controls">
            <%= text_field_tag "circle[display_name]", circle.display_name, class: "form-control requiredField", placeholder: "Name", id: "name" %>
          </div>
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <div class="controls">
            <%= text_area_tag "circle[description]", circle.description, class: "form-control requiredField", placeholder: "Description", id: "description", rows: "10" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button class="btn btn-primary" id="update_button">Update</button>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#update_button').click(function(){
    $('#update_circle').submit();
  });
  jQuery(document).ready(function () {
    $('form#update_circle').submit(function () {
      $('form#update_circle .error').remove();
      var hasError = false;
      $('form#update_circle .requiredField').each(function () {
        if (jQuery.trim($(this).val()) === '') {
          $(this).parent().append('<span class="error"><i class="fa fa-exclamation-triangle"></i></span>');
          $(this).addClass('inputError');
          hasError = true;
        }
      });
      if (hasError) {
        return false;
      } else {
        return true;
      }
    });
  });
</script>