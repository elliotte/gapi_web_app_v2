<div class="modal-dialog modal-small-width">
  <div class="modal-content">
    <div class="modal-header">
     <h3 class="pink-header">Are you sure?</h3>
    </div>
    <div class="modal-body">
      <%= form_tag(circle_path(circle.id), :id => "delete_circle", :method => "delete") do %>
      <% end %>
      <button class="btn" id="delete_button">OK</button>
      <p>Press ESC to exit</p>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#delete_button').click(function(){
    $('#delete_circle').submit();
  });
</script>


