<!-- search form new.ppl inside team page, email search -->
<div class="modal fade" id="modal-window-add-circle-member" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-medium-width">
		<div class="modal-content">
		    <div class="modal-header">
		      	<h3 class="pink-header">Search monea Users</h3>
		      	<p style="font-size:10px;">You can add colleagues from your friends list from your main work page.</p>
		    </div>
		    <div class="modal-body">
		      	<%= form_tag(search_peoples_path, :id => "add_circle_member_form", class: "contactForm", :method => "get") do %>
		      		
		        	<div class="form-group">
		          		<label for="query">Search:</label>
		          		<div class="controls">
		          			<%= text_field_tag "query", "", class: "white-pink", placeholder: "Search user by email" %>
		          			<%= hidden_field_tag "circle_id", params[:id] %>
		          		</div>
		        	</div>
		      	<% end %>
		    </div>
		    <div class="modal-footer">
		      <button class="btn" id="create_button_circle_member">Search</button>
		      <p>Press ESC to exit</p>
		    </div>
	  	</div>
	</div>
</div>

