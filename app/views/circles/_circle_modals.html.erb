				<%= form_tag(files_path, :id => "create_circle_document_form", class: "contactForm", :method => "post", :multipart => true) do %>
					<%= hidden_field_tag "circle_id", params[:id] %>
					<div class="form-group">
						<label for="file">Select Document:</label>
						<div class="controls">
							<%= file_field_tag "file", class: "form-control requiredField" %>
						</div>
					</div>
				<% end %>
				<br><br>
			</div>
			<div class="modal-footer">
				<button class="btn btn-primary" id="create_button_circle_document">Create</button>
				<p>Press ESC to exit</p>
			</div>
		</div>
	</div>
</div>

