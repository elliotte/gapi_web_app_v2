<div class="modal fade" id="modal-window" tabindex="-1" role="dialog" aria-hidden="true"></div>

<div class="modal fade" id="modal-window-add-circle-member" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-medium-width">
		<div class="modal-content">
		    <div class="modal-header">
		      	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		      	<h3 id="myModalLabel">Search</h3>
		    </div>
		    <div class="modal-body">
		      	<%= form_tag(search_peoples_path, :id => "add_circle_member_form", class: "contactForm", :method => "get") do %>
		          	<%= hidden_field_tag "circle_id", params[:id] %>
		        	<div class="form-group">
		          		<label for="query">Search:</label>
		          		<div class="controls">
		          			<%= text_field_tag "query", "", class: "form-control requiredField", placeholder: "Search" %>
		          		</div>
		        	</div>
		      	<% end %>
		    </div>
		    <div class="modal-footer">
		      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		      <button class="btn btn-primary" id="create_button_circle_member">Search</button>
		    </div>
	  	</div>
	</div>
</div>

<div class="modal fade" id="modal-window-circle-members-result" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-search-width">
		<div class="modal-content">
		    <div class="modal-header">
		      	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		      	<h3 id="myModalLabel" style="text-align: center;">Search Result</h3>
		    </div>
		    <div class="modal-body">
		    	<%= form_tag(add_people_peoples_path, :id => "add_circle_member_search_form", :method => "post") do %>
		    		<%= hidden_field_tag "circle_id", params[:id] %>
		    		<div id="search_result"></div>
		    	<% end %>
		    	<div class="hide">
		    		<%= form_tag(search_peoples_path, :id => "add_circle_member_search_form", :method => "get") do %>
		    			<%= hidden_field_tag "query", params[:query] %>
		    			<%= hidden_field_tag "circle_id", params[:id] %>
		    			<div id="next_results"></div>
		    		<% end %>
		    	</div>
		    	<button class="btn btn-primary pull-right" id="next_button_circle_member_search">Next</button>
		    </div>
		    <div class="modal-footer">
		      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		      <button class="btn btn-primary" id="create_button_circle_member_search">Add</button>
		    </div>
	  	</div>
	</div>
</div>

<div class="modal fade" id="modal-window-create-circle-event" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-default-width">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h3 id="myModalLabel">Create Event</h3>
			</div>
			<div class="modal-body">
				<%= form_tag("/calendars/primary/events", :id => "create_circle_event_form", class: "contactForm", :method => "post") do %>
          			<%= hidden_field_tag "event[circle_id]", params[:id] %>
          			<div class="form-group">
		          		<label for="event_summary">Summary:</label>
		          		<div class="controls">
			          		<%= text_field_tag "event[summary]", "", class: "form-control requiredField", placeholder: "Summary" %>
			          	</div>
		        	</div>
		        	<div class="form-group">
		          		<label for="start_time_event">Start Time:</label>
		          		<div class="controls">
			          		<%= text_field_tag "event[start_time]", "", class: "form-control requiredField", placeholder: "Start Time", id: "start_time_event" %>
			          	</div>
		        	</div>
		        	<div class="form-group">
		          		<label for="end_time_event">End Time:</label>
		          		<div class="controls">
			          		<%= text_field_tag "event[end_time]", "", class: "form-control requiredField", placeholder: "End Time", id: "end_time_event" %>
			          	</div>
		        	</div>
		        	<div class="form-group">
		          		<label for="event_location">Location:</label>
		          		<div class="controls">
			          		<%= text_field_tag "event[location]", "", class: "form-control requiredField", placeholder: "Location" %>
			          	</div>
		        	</div>
		        	<div style="font-weight: bold;">Attendees :-</div>
		        	<div class="form-group">
		          		<label for="event_attendee_name">Name:</label>
		          		<div class="controls">
			          		<%= text_field_tag "event[attendee_name]", "", class: "form-control requiredField", placeholder: "Attendee Name" %>
			          	</div>
		        	</div>
		        	<div class="form-group">
		          		<label for="event_attendee_email">Email:</label>
		          		<div class="controls">
			          		<%= text_field_tag "event[attendee_email]", "", class: "form-control requiredField email", placeholder: "Attendee Email" %>
			          	</div>
		        	</div>
		        	<div class="form-group">
		          		<label for="event_description">Description:</label>
		          		<div class="controls">
			          		<%= text_field_tag "event[description]", "", class: "form-control requiredField", placeholder: "Description" %>
			          	</div>
		        	</div>
		        	<div class="form-group">
		          		<label for="event_status">Status:</label>
		          		<div class="controls">
			          		<%= text_field_tag "event[status]", "confirmed", class: "form-control requiredField", placeholder: "Status: confirmed, tentative, cancelled" %>
			          	</div>
		        	</div>
		        	<div class="form-group">
		          		<label for="event_visibility">Visibility:</label>
		          		<div class="controls">
			          		<%= text_field_tag "event[visibility]", "default", class: "form-control requiredField", placeholder: "Visibility: default, public, private, confidential" %>
			          	</div>
		        	</div>
				<% end %>
			</div>
			<div class="modal-footer">
				<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
				<button class="btn btn-primary" id="create_button_circle_event">Create</button>
			</div>
		</div>
	</div>
</div>

