<div class="modal-dialog modal-default-width">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Create Event</h3>
    </div>
    <div class="modal-body">
      <%= form_tag("/calendars/primary/events", :id => "create_event", :method => "post") do %>
        <div class="form-group">
          Summary: <%= text_field_tag "event[summary]", "", class: "form-control", placeholder: "Summary", id: "summary" %>
          Start Time: <%= text_field_tag "event[start_time]", "", class: "form-control", placeholder: "Start Time", id: "start_time" %>
          End Time: <%= text_field_tag "event[end_time]", "", class: "form-control", placeholder: "End Time", id: "end_time" %>
          Location: <%= text_field_tag "event[location]", "", class: "form-control", placeholder: "Location", id: "location" %>
          Attendees :-
            Name: <%= text_field_tag "event[attendee_name]", "", class: "form-control", placeholder: "Attendee Name" %>
            Email: <%= text_field_tag "event[attendee_email]", "", class: "form-control", placeholder: "Attendee Email" %>
          Description: <%= text_field_tag "event[description]", "", class: "form-control", placeholder: "Description", id: "description" %>
          Status: <%= text_field_tag "event[status]", "", class: "form-control", placeholder: "Status", id: "status" %>
          Visibility: <%= text_field_tag "event[visibility]", "", class: "form-control", placeholder: "Visibility", id: "visibility" %>
          <%= hidden_field_tag "event[circle_id]", "" %>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button class="btn btn-primary" id="create_button">Create</button>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#create_button').click(function(){
    $('#create_event').submit();
  });
</script>