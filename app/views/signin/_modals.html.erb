<div class="modal fade" id="modal-window-create-event" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-default-width">
		<div class="modal-content">
			<div class="modal-header">
				<h3 class="pink-header">Create Event</h3>
				<p>You can now create and share an event using moneaTeams</p>
			</div>
			<div id="js-add-event-content-body" class="modal-body">
				<%= form_tag("/calendars/primary/events", :id => "create_event_form", :method => "post", remote: true) do %>
					<div class="form-group">
						Summary: <%= text_field_tag "event[summary]", "", class: "white-pink", placeholder: "Summary" %>
						Start Time: <%= text_field_tag "event[start_time]", "#{DateTime.now.strftime('%d/%m/%Y %H:%M')}", class: "white-pink", id: "start_time_event" %>
						End Time: <%= text_field_tag "event[end_time]", "#{(DateTime.now+1.hour).strftime('%d/%m/%Y %H:%M')}", class: "white-pink", placeholder: "End Time", id: "end_time_event" %>
						Description: <%= text_field_tag "event[description]", "", class: "white-pink", placeholder: "Description" %>
						Location: <%= text_field_tag "event[location]", "", class: "white-pink", placeholder: "Location" %>
						Attendee Teams: <%= text_field_tag "event[attendee_team_ids]", "", class: "white-pink", id: "search_calendar_ppl" %>
						HangoutLink: <%= text_field_tag "event[hangout_link]", "", class: "white-pink", placeholder: "paste Link" %>
          				<%= hidden_field_tag "event[circle_id]", params[:id] %>
          				<br>
          				<%= submit_tag "Add", class: "btn" %>
					</div>
				<% end %>
				
			</div>
			<div class="modal-footer">
				<p>Press ESC to exit</p>
				<button id="add-another-event" style="display:none" class="btn" aria-hidden="true">Add Another</button>
			</div>
		</div>
	</div>
</div>

